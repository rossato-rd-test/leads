<p id="notice">
	<%= notice %>
</p>

<h1>Listing Leads</h1>

<table id="leads">
	<thead>
		<tr>
			<th>Name</th>
			<th>Last name</th>
			<th>Email</th>
			<th>Company</th>
			<th>Job title</th>
			<th>Phone</th>
			<th>Website</th>
			<th>Salesforce</th>
			<th>Salesforce updated at</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @leads.each do |lead| %>
		<tr>
			<td><%= lead.name %></td>
			<td><%= lead.last_name %></td>
			<td><%= lead.email %></td>
			<td><%= lead.company %></td>
			<td><%= lead.job_title %></td>
			<td><%= lead.phone %></td>
			<td><%= lead.website %></td>
			<td><%= lead.salesforce_id %></td>
			<td><%= lead.salesforce_updated_at %></td>
			<td><%= link_to 'Show', lead %></td>
			<td><%= link_to 'Edit', edit_lead_path(lead) %></td>
			<td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

